APP_NAME=Saas_Base
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# =============================================================================
# CONFIGURAÇÕES DE DOMÍNIO
# =============================================================================
# Em desenvolvimento local, não é necessário configurar domínios.
# As URLs funcionarão assim:
#   - localhost:8000/           → Landing page
#   - localhost:8000/app/login  → Login
#   - localhost:8000/app/{empresa} → Painel da empresa
#   - localhost:8000/meuadmin   → Painel super admin
#
# Em produção com Cloudflare, configure:
#   APP_DOMAIN=seudominio.com.br
#   FILAMENT_APP_DOMAIN=app.seudominio.com.br

APP_DOMAIN=localhost

# Domínio do painel de empresas (vazio em local, subdomínio em produção)
# Local: deixe vazio
# Produção: FILAMENT_APP_DOMAIN=app.seudominio.com.br
FILAMENT_APP_DOMAIN=

# Domínio do painel admin (opcional, normalmente usa path /meuadmin)
FILAMENT_ADMIN_DOMAIN=

# Email do super admin (verificação extra de segurança para /meuadmin)
SUPER_ADMIN_EMAIL=

# =============================================================================
# LOCALIZAÇÃO
# =============================================================================
APP_TIMEZONE="America/Sao_Paulo"
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# =============================================================================
# LOGS
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# BANCO DE DADOS
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=saasbasenovo
DB_USERNAME=postgres
DB_PASSWORD=

# =============================================================================
# SESSÃO
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_PATH=/
SESSION_DOMAIN=localhost

# Segurança de Session
# Em PRODUÇÃO, configurar:
#   SESSION_DOMAIN=.seudominio.com.br  (com ponto para compartilhar entre subdomínios)
#   SESSION_ENCRYPT=true
#   SESSION_SECURE_COOKIE=true
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=false

# =============================================================================
# OUTROS SERVIÇOS
# =============================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# EMAIL
# =============================================================================
MAIL_MAILER=smtp
MAIL_LOG_CHANNEL=mail
MAIL_ENCRYPTION=tls
MAIL_SCHEME=null
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# CLOUDINARY - Upload de imagens
# =============================================================================
# Formato: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=saas

# =============================================================================
# AWS S3 (opcional)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
